root = true
[*]
indent_style=space
indent_size=4
tab_width=4
end_of_line=lf
charset=utf-8
trim_trailing_whitespace=true
max_line_length=120
insert_final_newline=true

[pallets/**.rs]
indent_style=tab
indent_size=tab

[standalone/chain/{node,runtime}/**.rs]
indent_style=tab
indent_size=tab

[standalone/teeworker/{ceseal,cifrost}/**.rs]
indent_style=space
indent_size=4

[*.{yml,yaml}]
indent_style=space
indent_size=2
tab_width=2
end_of_line=lf

[scripts/**]
indent_style=space
indent_size=4